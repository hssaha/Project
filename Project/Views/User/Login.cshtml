
@model Project.Models.UserModel

@{
    ViewBag.Title = "Index";
}

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true, "Login failed!");
    <div>
        <fieldset>
            <legend>Login!</legend>
            <div>@Html.LabelFor(u => u.Email)</div>
            <div>@Html.TextBoxFor(u=>u.Email) @Html.ValidationMessageFor(u=>u.Email)</div>

            <legend>Password!</legend>
            <div>@Html.PasswordFor(u => u.Password)</div>
            <div>@Html.TextBoxFor(u => u.Password) @Html.ValidationMessageFor(u => u.Password)</div>
            <input type="submit" value="Login" />
        </fieldset>

    </div>

}

